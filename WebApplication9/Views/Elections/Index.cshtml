@model IEnumerable<WebApplication9.Models.Election>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Elections", FormMethod.Post))   
{
    <div>
        Search By Name:@Html.TextBox("searchString")
        <input id="Submit" type="submit" value="Filter"/>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("ElectionType","Index",new { sortOrder= ViewBag.ElectionType })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ElectionType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ElectionId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ElectionId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ElectionId })
        </td>
    </tr>
}

</table>
